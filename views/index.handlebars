<div class="container-fluid">
	<div class="row">
		<div class="col-lg-4 col-lg-offset-4">
			<img class="img-responsive" src="assets/img/burger-copy.png">
		</div>
		<div class="col-lg-6 col-lg-offset-3">
			<br>
			<br>
			<form method="POST" action="/">
				<div class="form-group">
					<div class="input-group col-lg-12 col-xs-offset-0">
						<input class="form-control" type="text" placeholder="What kind of burger would you like?" name="burgerUserInput">
						<span class="input-group-btn">
							<button class="btn btn-default" type="submit">Submit</button>
						</span>
					</div>
				</div>
			</form>
		</div>
	</div>
	<div class="row">
        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h1 class="panel-title">Served Orders</h1>
                </div>
                <div class="panel-body">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Order</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                        {{#each Burgers}}
                        {{#unless this.devoured}}
                        <tr>
                        	<td>{{this.id}}</td>
                        	<td>{{this.burger_name}}</td>
                        	<td class="text-right">
                        		<form action="/{{this.id}}?_method=PUT" method="POST">
                        			<input type="hidden" name="devoured" value="true">
                        			<button class="btn btn-primary btn-sm" type="submit">Devour Burger</button>
                        		</form>
                        	</td>
                        </tr>
                        {{/unless}}
                        {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
        	<div class="panel panel-default">
        		<div class="panel-heading">
        			<h1 class="panel-title">Orders Devoured</h1>
        		</div>
        		<div class="panel-body">
        			<div class="table-responsive">
        				<table class="table table-striped">
        					<thead>
        						<tr>
        							<th>#</th>
        							<th>Order</th>
        						</tr>
        					</thead>
        					<tbody>
        						{{#each Burgers}}
        							{{#if this.devoured}}
        							<tr>
        								<td>{{this.id}}</td>
        								<td>{{this.burger_name}}</td>
        							</tr>
        							{{/if}}
        						{{/each}}
        					</tbody>
        				</table>
        			</div>
        		</div>
        	</div> 
        </div>
    </div>
</div>